@model IEnumerable<LCDSArtGallery.Models.Product>

<div class="container w-75">
     <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active carousel-image">
              <img class="d-block w-100" src="~/images/home/carousel.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Explore Artworks at the LCDS Art Gallery </h5>
                    <p>LCDS Art Gallery is a contemporary fine art gallery located in major cities in the United States and Europe.
                        With the belief that art is a universal language that bridges cultures and forms human connections, 
                        we strive to create unforgettable exhibitions and events that bring color and inspiration to life’s every moment.</p>
                </div>
            </div>
            <div class="carousel-item carousel-image">
              <img class="d-block w-100" src="~/images/home/carousel1.jpg" alt="Second slide">
                  <div class="carousel-caption d-none d-md-block">
                     <h5>...</h5>
                      <p>...</p>
                  </div>
            </div>
            <div class="carousel-item carousel-image">
              <img class="d-block w-100" src="~/images/home/carousel2.jpg" alt="Third slide">
                  <div class="carousel-caption d-none d-md-block">
                       <h5>A Vibrant World of Contemporary Art</h5>
                      <p>LCDS Gallery represents brilliant contemporary artists worldwide, displaying their art in breathtaking
                    galleries in some of the top premium locations around the world</p>          
                  </div>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
    </div>


	<div class="cards pt-4 mt-4">
         @foreach (var product in Model)
        {
		<div class="card-item">
			<div class="card-body">
                <img src="@product.ImageUrl" class="card-img" />
                 <div class="d-flex align-items-center justify-content-around py-3">
				<h2 class="card-title center">@product.Name</h2>
                <p class="text-justify text-right">Price:$@product.Price.ToString("0.00")</p>
               
                </div>
                    <p class="text-center">@product.Description</p>
				<div class="center" style="margin: 0 auto;">
					<a asp-action="Details" class="btn1" asp-route-id="@product.Id">Details</a>
				</div>
			</div>
		</div>
       }
	</div>


@section Scripts{

    <script src="~/js/product.js"></script>
}